{% extends '_layoutReport.twig' %}

{% block title %}
{{ dashboard.name }}
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="/leaflet.js"></script>
    <script>
        var data = {{ rows|json_encode|raw }},
            params = {{ params|json_encode|raw }},
            centerLat = {{ centerLat }},
            centerLon = {{ centerLon }}
        ;
    </script>
    <script>

        var map = L.map('map').setView([centerLat, centerLon], params.zoom);


        L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6IjZjNmRjNzk3ZmE2MTcwOTEwMGY0MzU3YjUzOWFmNWZhIn0.Y8bhBaUMqFiPrDRW9hieoQ', {
            maxZoom: 18,
            attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, ' +
            '<a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
            'Imagery Â© <a href="http://mapbox.com">Mapbox</a>',
            id: 'mapbox.streets'
        }).addTo(map);


        for (var a in data) {
            var r = data[a];

            L.circle([r.lat, r.lon], r.size * params.radiusMax < params.radiusMin ? params.radiusMin : r.size * params.radiusMax, {
                color: r.color,
                fillColor: r.color,
                fillOpacity: 0.5
            }).addTo(map).bindPopup(r.title + "<br/>" + params.size + " : " + r.sizeRaw + "<br/>" + params.color + ": " + r.colorRaw);

        }

    </script>
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/leaflet.css"/>
    <style>
        #map {
            width:100%;
            height:550px;
            /*min-height: 100%;*/
            /*height: 100%;*/
            margin:2em 0;
        }
    </style>
{% endblock %}

{% block content %}
    <h2>
        <a href="/">H</a> >
        {{ dashboard.name }}
        <a href="{{ editDashboardUrlPrefix }}{{ dashboard.filename }}" target="_blank" title="Edit">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true" style="font-size:.6em"></span>
        </a>
    </h2>

    <div id="map"></div>

    <p>Based on report: <a href="/report/{{ report.baseName }}">{{ report.name }}</a></p>
    <ul>
        <li>Circle size: <strong>{{ dashboard.parameters.size }}</strong></li>
        <li>Circle color: <strong>{{ dashboard.parameters.color }}</strong></li>
    </ul>
{% endblock %}

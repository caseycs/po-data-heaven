<!DOCTYPE html>
<html>
<head>
    <title>Leaflet Quick Start Guide Example</title>
    <meta charset="utf-8"/>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="http://leafletjs.com/dist/leaflet.css"/>
</head>
<body>
<div id="map" style="width: 900px; height: 600px"></div>

<script src="http://leafletjs.com/dist/leaflet.js"></script>
<script>
    var data = {{ rows|json_encode|raw }};
    var params = {{ params|json_encode|raw }};
</script>
<script>

    var map = L.map('map').setView([params.centerLat, params.centerLon], params.zoom);


    L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6IjZjNmRjNzk3ZmE2MTcwOTEwMGY0MzU3YjUzOWFmNWZhIn0.Y8bhBaUMqFiPrDRW9hieoQ', {
        maxZoom: 18,
        attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, ' +
        '<a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
        'Imagery Â© <a href="http://mapbox.com">Mapbox</a>',
        id: 'mapbox.streets'
    }).addTo(map);


    for (var a in data) {
        var r = data[a];

        L.circle([r.lat, r.lon], r.size * params.radiusMax < params.radiusMin ? params.radiusMin : r.size * params.radiusMax, {
            color: r.color,
            fillColor: r.color,
            fillOpacity: 0.5
        }).addTo(map).bindPopup(r.title + "<br/>" + params.size + " : " + r.sizeRaw + "<br/>" + params.color + ": " + r.colorRaw);

    }

</script>
</body>
</html>
